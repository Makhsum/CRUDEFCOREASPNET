@model CRUDEFCORE.Models.AddEmployeeViewModel



<h1>Add Employee</h1>

<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" id="" aria-describedby="emailHelp" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email address</label>
        <input type="email" class="form-control" id="" aria-describedby="emailHelp" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" id="" aria-describedby="emailHelp" asp-for="Salary">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">DateOfBirth</label>
        <input type="date" class="form-control" id="" aria-describedby="emailHelp" asp-for="DateOfBirth">
    </div>
    <div class="mb-3">
            <label for="" class="form-label">Department</label>
            <input type="text" class="form-control" id="" aria-describedby="emailHelp" asp-for="Department">
        </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>