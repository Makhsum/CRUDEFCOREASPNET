@model List<CRUDEFCORE.Models.Domain.Employee>

<h1>Employee</h1>
<div style="display: flex;justify-content: right;"><div style="width: 100px"  class="btn btn-primary"><a href="Employee/Add" style="text-decoration: none;color: white">Add</a></div>
</div>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>     
        <th>Name</th>     
        <th>Email</th>     
        <th>Salary</th>     
        <th>Date Of Birth</th>     
        <th>Department</th>
        <th></th>
    </tr>
        
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employee/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>